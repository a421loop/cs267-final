    <script>
        // Timer functionality
        function startTimer(duration, display) {
            let timer = duration, minutes, seconds;
            const interval = setInterval(function () {
                minutes = parseInt(timer / 60, 10);
                seconds = parseInt(timer % 60, 10);

                minutes = minutes < 10 ? "0" + minutes : minutes;
                seconds = seconds < 10 ? "0" + seconds : seconds;

                display.textContent = minutes + ":" + seconds;

                if (--timer < 0) {
                    clearInterval(interval);
                    display.textContent = "Time's up!";
                }
            }, 1000);
        }

        // Screen transition
        document.getElementById('continueBtn').addEventListener('click', function() {
            document.getElementById('personalizeScreen').classList.remove('active');
            document.getElementById('problemScreen').classList.add('active');
            
            // Start the timer when transitioning to the problem screen
            const fiveMinutes = 60 * 5;
            const display = document.querySelector('#timer');
            startTimer(fiveMinutes, display);
        });

        // Subject area tags toggle
        const subjectTags = document.querySelectorAll('.subject-area .tag');
        subjectTags.forEach(tag => {
            tag.addEventListener('click', function() {
                subjectTags.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Learning style options toggle
        const styleOptions = document.querySelectorAll('.learning-style-options .style-option');
        styleOptions.forEach(option => {
            option.addEventListener('click', function() {
                styleOptions.forEach(o => o.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Toggle hint visibility
        document.getElementById('hint1').addEventListener('click', function() {
            const hintContent = document.getElementById('hint1-content');
            if (hintContent.style.display === 'block') {
                hintContent.style.display = 'none';
            } else {
                hintContent.style.display = 'block';
            }
        });

        // Check solution functionality
        document.getElementById('check-solution').addEventListener('click', function() {
            const solutionInput = document.getElementById('solution-input').value.trim().toLowerCase();
            const spinner = document.getElementById('spinner');
            
            // Show spinner
            spinner.classList.add('active');
            
            // Disable button temporarily
            this.disabled = true;
            
            // Simulate checking (wait 1.5 seconds)
            setTimeout(() => {
                // Hide spinner
                spinner.classList.remove('active');
                
                // Re-enable button
                this.disabled = false;
                
                // Check for correct answer: 3x¬≤ + 4x - 4
                const hasTerm1 = solutionInput.includes('3x¬≤') || solutionInput.includes('3x^2') || solutionInput.includes('3x2');
                const hasTerm2 = solutionInput.includes('4x');
                const hasTerm3 = solutionInput.includes('-4') || solutionInput.includes('- 4');
                
                const correctAnswer = hasTerm1 && hasTerm2 && hasTerm3;
                
                // Set modal content based on correctness
                if (correctAnswer) {
                    document.querySelector('.modal-title').textContent = "Correct!";
                    document.querySelector('.modal-message').textContent = "Great work! üëèüéä";
                    document.querySelector('.modal-icon').style.backgroundColor = "#4caf50";
                    document.querySelector('.modal-icon').innerHTML = '<svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M20 6L9 17L4 12"></path></svg>';
                } else {
                    document.querySelector('.modal-title').textContent = "Try Again";
                    document.querySelector('.modal-message').textContent = "Review the power rule and try again. Remember to differentiate each term.";
                    document.querySelector('.modal-icon').style.backgroundColor = "#f44336";
                    document.querySelector('.modal-icon').innerHTML = '<svg width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>';
                }
                
                // Show the modal
                document.getElementById('solution-modal').classList.add('active');
            }, 1500);
        });

        // Close the modal and proceed to AI policy page
        document.getElementById('modal-continue-btn').addEventListener('click', function() {
            document.getElementById('solution-modal').classList.remove('active');
            document.getElementById('problemScreen').classList.remove('active');
            document.getElementById('aiPolicyScreen').classList.add('active');
        });

        // Open Calculator
        document.getElementById('calculator-btn').addEventListener('click', function() {
            window.open('https://ti84calc.com/ti84calc', '_blank');
        });
        
        // Open Notes
        document.getElementById('notes-btn').addEventListener('click', function() {
            window.open('https://tutorial.math.lamar.edu/classes/calci/calci.aspx', '_blank');
        });
        
        // AI Policy Analysis Flow
        document.getElementById('analyzeBtn').addEventListener('click', function() {
            document.getElementById('aiPolicyScreen').classList.remove('active');
            document.getElementById('policyAnalysisScreen').classList.add('active');
        });
        
        // Handle file uploads
        function handleFileUpload(element, fileType) {
            element.addEventListener('click', function() {
                const input = document.createElement('input');
                input.type = 'file';
                input.accept = '.pdf,.docx,.txt';
                
                input.onchange = function(e) {
                    if (e.target.files.length > 0) {
                        const file = e.target.files[0];
                        addFileToList(file, fileType);
                    }
                };
                
                input.click();
            });
        }
        
        function addFileToList(file, fileType) {
            const filesList = document.getElementById('uploadedFiles');
            
            // Create file element
            const fileItem = document.createElement('div');
            fileItem.className = 'file-item';
            fileItem.innerHTML = `
                <div class="file-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                    </svg>
                </div>
                <div class="file-name">${file.name} (${fileType})</div>
                <div class="file-remove">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </div>
            `;
            
            // Add remove functionality
            const removeBtn = fileItem.querySelector('.file-remove');
            removeBtn.addEventListener('click', function() {
                filesList.removeChild(fileItem);
            });
            
            filesList.appendChild(fileItem);
            
            // Enable analyze button if files are uploaded
            if (filesList.children.length > 0) {
                document.getElementById('analyzeBtn').style.opacity = '1';
                document.getElementById('analyzeBtn').disabled = false;
            }
        }
        
        // Initialize file upload handlers
        handleFileUpload(document.getElementById('policyUpload'), 'AI Policy');
        handleFileUpload(document.getElementById('assignmentUpload'), 'Assignment');
        
        // Initially disable the analyze button
        document.getElementById('analyzeBtn').style.opacity = '0.6';
        document.getElementById('analyzeBtn').disabled = true;
        
        // Validate form before continuing
        document.getElementById('continueBtn').addEventListener('click', function(e) {
            const nameInput = document.getElementById('fullName');
            const educationSelect = document.getElementById('educationLevel');
            const courseSelect = document.getElementById('courseSubject');
            
            // Simple validation
            if (nameInput.value.trim() === '') {
                nameInput.style.borderColor = '#f44336';
                e.preventDefault();
                return false;
            } else {
                nameInput.style.borderColor = '#ddd';
            }
            
            if (educationSelect.value === '') {
                educationSelect.style.borderColor = '#f44336';
                e.preventDefault();
                return false;
            } else {
                educationSelect.style.borderColor = '#ddd';
            }
            
            if (courseSelect.value === '') {
                courseSelect.style.borderColor = '#f44336';
                e.preventDefault();
                return false;
            } else {
                courseSelect.style.borderColor = '#ddd';
            }
            
            // If validation passes, the screen transition will proceed
        });
        
        // Navigation buttons in problem screen
        const prevButton = document.querySelector('.btn-next:first-of-type');
        const nextButton = document.querySelector('.btn-next:last-of-type');
        
        prevButton.addEventListener('click', function() {
            // In a real app, this would go to the previous problem
            alert('This would navigate to the previous problem');
        });
        
        nextButton.addEventListener('click', function() {
            // Go to AI policy page when next button is clicked
            document.getElementById('problemScreen').classList.remove('active');
            document.getElementById('aiPolicyScreen').classList.add('active');
        });
    </script>
</body>
</html>
